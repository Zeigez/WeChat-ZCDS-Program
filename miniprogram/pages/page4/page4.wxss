/* example/grid/grid.wxss */
@import '../common.wxss';

.hd-box {
  display: flex;
  height: 250rpx;
  flex-direction: row;
  border-radius: 10rpx;
  box-shadow: 0px 5px 2px #cccccc;
  box-sizing: border-box;
  margin: 0 10rpx 20rpx;
}

.hd {
  flex: 1;
  box-sizing: border-box;
  padding: 40rpx;
}

.CaiDan {
  height: 100%;
  width: 100rpx;
  border-radius: 0 10rpx 10rpx 0;
  background-color: tomato;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  height: 35px;
  background-color: tomato;
  color: white;
  border-radius: 10rpx;
  box-shadow: 0px 5px 2px #cccccc;
  margin: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.navigator {
  height: 400rpx;
  padding: 10rpx;
}

.div {
  display: flex;
  flex-direction: column;
  height: 100%;
  width: 100%;
  position: relative;
  /* background-color: tomato; */
  border-radius: 10rpx;
  box-shadow: 0px 5px 2px #cccccc;
}


.image-box {
  /* box-sizing: border-box; */
  flex-grow: 1;
}

.image {
  max-width: 100%;
  height: 100%;
}

.lable {
  align-self: flex-end;
  position: absolute;
  bottom: 0;
  align-items: center;
  /* position: relative; */
  height: 50rpx;
  width: 100%;
  border-radius: 0 0 10rpx 10rpx;
  background-color: white;
  /* float: bottom; */
}