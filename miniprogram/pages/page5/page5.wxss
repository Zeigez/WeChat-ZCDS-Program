.user-palace{padding: 20rpx;position: relative;overflow: hidden;}
.user-palace-grid{position: relative;float: left;width: 33.33%;box-sizing: border-box;border-right: 1rpx solid #f5f5f5;}
.user-palace-grid:last-child{border-right: none;}
.user-palace-grid-icon{width: 100%; margin: 0 auto;text-align: center; color:#35B083;font-size:30rpx; font-weight: 600; padding-top: 10rpx;}
.user-palace-grid-icon image{display: block;margin: 0 auto;width: 80rpx;height: 80rpx;border: none; padding-bottom: 20rpx;}
.user-palace-grid-text{display: block;text-align: center;color: #15e215;font-size: 35rpx;white-space: nowrap;text-overflow: ellipsis;   overflow: hidden;padding-top: 4rpx;font-weight:bold}
.user-palace-grid-text .h2{font-size: 0.8rem;font-weight: normal;color: #929292;}
.user-icon-box .user-flex-box{padding: 15rpx 20rpx;position: relative;display: flex;align-items: center;}
.user-icon-box .user-flex-box-hd{position: relative;margin-right: 10rpx;}
.user-icon-box .user-flex-box-hd image{width: 60rpx;height: 60rpx;display: block;border: none;border-radius: inherit;}
.user-icon-box .user-flex-box-bd{color: #333333;font-size: 28rpx; flex:1;}
.user-icon-box .user-flex-box-ft{text-align: right;color: #999999;}
.user-icon-box .user-flex-box-ft .text{vertical-align: middle;font-size: 24rpx;padding-right: 40rpx;}
.user-icon-box .user-flex-box-ft .arrow{content: " ";display: inline-block;height: 16rpx;width: 16rpx;border-width: 3rpx 3rpx 0 0;border-color: #C8C8CD;border-style: solid;-webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);top: -4rpx;position: absolute;top: 50%;margin-top: -8rpx;right: 30rpx;}

